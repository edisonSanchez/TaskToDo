<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasktodo" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DonSolidario" >
        <activity
            android:name="com.example.tasktodo.ui.view.RegisterNewUserActivity"
            android:exported="true" />
        <activity
            android:name="com.example.tasktodo.ui.view.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.tasktodo.ui.view.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|screenSize|keyboard"
            android:name="com.example.tasktodo.ui.view.MainActivity"
            android:exported="true"/>
    </application>

</manifest>